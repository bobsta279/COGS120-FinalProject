    {{#each posts}}

      <div id="AllPoststitle" 
        class="theHead">{{name}}
      </div>

      <br>

      <div class="important">
        <p class="card1"> <b>Main Focus:</b> <br> {{level}} </p>
      </div>

      
      <div class="important">
        <p class="card1"> <b>Gym:</b>{{gym}} <br>
        <b>When:</b> {{when}}
        </p>
      </div>

      <div class="important">
        <p class="card1"> <b>Specific Workouts:</b> <br>{{wantsToLearn}}
        </p>
      </div>

      <div class="important">
        <p class="card1"> <b>Long Term Goals:</b> <br>{{longTerm}}
        </p>
      </div>

      <div class="important">
        <p class="card1"> <b>Phone Number:</b> <br>{{phone}}
        </p>
      </div>
      <br>

    {{/each}}

    <div class="comment">
      <textarea id="title" style="font-size:20px;" type="text"
        rows="1" cols="24" onkeyup="Allow()"
        placeholder="&nbsp;Write a Comment..."></textarea>
      <input id="title" type="submit" value="Post" onclick="insert()"
        style="color:black; font-size:20px; width:75px; height: 35px;
        margin-right: 1px;
        box-shadow: 1px 1px 12px 0 rgb(189, 208, 216);
     border: 2px solid #222222;
     border-radius: 10px;background-color:#A9CEF4;
        display: inline-block;font-family:'Lato'" /></form>
      </div>
      <div id="display"></div>
      <script type="text/javascript">
        var titles = [];
        var titleInput = document.getElementById("title");
        var messageBox = document.getElementById("display");
        function Allow()
        {
        }
        function insert () {
          titles.push(titleInput.value);
          clearAndShow();
        }
        function clearAndShow ()
        {
          titleInput.value = "";
          messageBox.innerHTML = "";
          messageBox.innerHTML += " " + titles.join("<br/> ") + "<br/>";
        }
      </script>

