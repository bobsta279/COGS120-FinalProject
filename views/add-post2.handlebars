<body>
	<div class="container">
		<a href="javascript:history.back()">
			<img width="60px" align="left" class="leftImage" src="images/back_arrow.png">
		</a>
		<div class="jumbotron" style="z-index: -1">
			<h3 class="title">LIFTR</h3>
		</div>
	
		<form id="addPostForm" role="form" method="get" action="/add">
		<h2>What is your experience level?</h2>
	    <div class="form-group">
	      <label for="name"></label>
		  <select name="dropdown" style="width: 250px; font-size: 30px;">
				<option value = "none">--Please select--</option>
            	<option style="color: blue;" value = "novice">Novice</option>
            	<option style="color: green;" value = "intermediate">Intermediate</option>
				<option style="color: orange;" value = "expert">Expert</option>
         	</select>
	    </div>
	    <div class="form-group">
	      <label for="description">Phone Number:</label>
	      <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="(858) 555-1234" size="18px" maxlength="50" />
	    </div>
	    <input type="submit" id="addPostBtn" value="Add Post!"></input>
	</form>

	<br>
	<br>

	</div>

