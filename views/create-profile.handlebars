<!doctype html>

<html>
<head>
	<title>LIFTR</title>	
	<meta charset="utf-8">
	<meta name = "viewport" content="width=device-width, initial-scale=1.0">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
      
</head>

<body>
	<div class="container">
		<div class="jumbotron">
			<h3 class="title">LIFTR</h3>
		</div>
		
		<div id="nameInfo">
			<form label="firstName" method="get", action="/user">
				First name:
				<input type="text" size="18px" placeholder="Antonio" name="firstName" value="" maxlength="50" />
			
			<br>
			<br>

			<form  method="get" action="/user" label="lastName">
				Last name:
				<input type="text" size="18px" placeholder="Simp" name="lastName" value="" maxlength="50" />
		</div>
		
		<br>
		<br>

			
		<form label="skill" action="/add">
			<div class="skillLevel">
			<h2 style="float: left;">Skill Level: &ensp;</h2>
			</div>
			<br>
			<select name="dropdown" class="dropdown" class="skillLevel" style="height: 32px;">
				<option value = "none">--Please select--</option>
				<option value = "novice">Novice</option>
				<option value = "intermediate">Intermediate</option>
				<option value = "expert">Expert</option>
			</select>
			<div id="saveBtn">
			 <input type="submit" value="Save!"></input>
			</div>
      	</form>
	   
		<br>
		<br>
		<br>
		<br>

		

	</div>

	<script src="https://code.jquery.com/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/bootstrap.min.js"></script>
</body>
</html>
