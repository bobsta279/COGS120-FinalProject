<body>
	<div class="grad">
		<br>

		<h2 align="center" id="AllPoststitle">Recommended Posts</h2>


		<form>
				
					<h1 style="font-family: 'Lato'; color:white;float:left; margin-left:10px; font-size:20px;display:inline-block"> Time: </h1>
					<h1 style="font-family: 'Lato'; margin-left:150px;color:white; font-size:20px; display:inline-block"> Location: </h1>
				
					<select method="get" class="dropdown2" id="dropWhen"
					style="display:inline-block; margin-left:10px; width: 156px; height:28px;" name="when">
    				<option value = "none">No Preference</option>
						<option value="now">Now</option>
						<option value="in 1-2 hours">in 1-2 hours</option>
						<option value="in 3-4 hours">in 3-4 hours</option>
						<option value="in 5-6 hours">in 5-6 hours</option>
						<option value="in 7-8 hours">in 7-8 hours</option>
					</select>​


		

					
					<select method="get" class="dropdown2"
					name="where" style="display:inline-block;margin-left:40px; width: 155px; height:28px;">
    				<option value = "none">No Preference</option>
					<option value = "RIMAC">RIMAC</option>
					<option value = "Main Gym">Main Gym</option>
					</select>​
			

			

					<h1 style="font-family: 'Lato';color:white;float:left; margin-left:15px; font-size:20px">Main Focus:</h1>
					
					<br><br><p></p>
					<button id="refreshBtn" >
					<img  name="refresh"
					type="submit" value="Save" style="width:55px; height:55px" src="images/refreshing.png">
					</button>
					<br>
					
					<select method="get" class="dropdown2" name="focus" style="margin-left:10px; width: 155px; height:28px;">	
    				<option value = "none">No Preference</option>
					<option value = "Weightlifting">Weightlifting</option>
					<option value = "Bodyweight">Bodyweight</option>
					<option value = "Cardio">Cardio</option>
					</select>​
					

					
					
				</form>
					<br>
					<hr>
		<h4 align ="center" style="font-family:'Lato'; font-size:20px;color:white;">No Matches?</h4>

		<div align="center">
			<a href="index">
				<button class="button3">
					<h4><b>View All Posts</b></h4>
				</button>
			</a>
		</div>
		<br>
						<div class="container">


		{{#if alt}}

			{{#each posts}}
				<form name={{name}} method="get" action="/findPost" align="center">
					<button name="{{name}}" class="card" style="border-color: black";>
						
						<img class="rightArrow" border="0" width="35px"
							align="Right" src="images/bubbleRight.png" >
							<h3 id="AllPosts"> When: {{when}}</h3>
						<h3 id="AllPosts">Gym: {{gym}}</h3>
							<h3 id="AllPosts" name="{{name}}"> {{name}} </h3>
						<h3 id="AllPosts" style="color: {{color}};">Main Focus: {{level}}</h3>
						
						
					</button>
				</form>
				<br>
				<br>
			{{/each}}

		{{else}}

			{{#each posts}}
				<form name={{name}} method="get" action="/findPost" align="center">
					<button name="{{name}}" class="card" style="border-color: black";>
						
						<img class="rightArrow" border="0" width="35px"
							align="Right" src="images/bubbleRight.png" >
							<h3 id="AllPosts" name="{{name}}"> {{name}} </h3>
						<h3 id="AllPosts" style="color: {{color}};">Main Focus: {{level}}</h3>
						<h3 id="AllPosts"> When: {{when}}</h3>
						<h3 id="AllPosts">Gym: {{gym}}</h3>
						
					</button>
				</form>
				<br>
				<br>
			{{/each}}

		{{/if}}

